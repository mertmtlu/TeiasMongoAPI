{
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:14021",
    "DatabaseName": "teias"
  },
  "Jwt": {
    "Secret": "your-256-bit-secret-key-for-jwt-token-generation-change-this-in-production",
    "Issuer": "TeiasMongoAPI",
    "Audience": "TeiasMongoAPI.Client",
    "ExpiresInMinutes": 60
  },
  "RefreshToken": {
    "ExpirationDays": 7,
    "RetentionDays": 30,
    "MaxTokensPerUser": 10,
    "CleanupOnLogin": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001",
      "http://144.122.103.206:5090", 
      "http://144.122.103.206:7058", 
      "http://*:3000"
    ]
  },
  "ExecutionSettings": {
    "DefaultMaxExecutionTimeMinutes": 2880,
    "MaxAllowedExecutionTimeMinutes": 2880
  },
  "ProjectExecution": {
    "WorkingDirectory": "./storage",
    "EnableDocker": true,
    "DockerPath": null,
    "DockerImages": {
      "Python": "python-executor:latest",
      "NodeJs": "nodejs-executor:latest",
      "CSharp": "dotnet-executor:latest",
      "Java": "java-executor:latest"
    },
    "EnableNetworkAccess": true,
    "DefaultTimeoutMinutes": 2880,
    "MaxProjectSizeBytes": 524288000,
    "ResourceLimits": {
      "MemoryMB": 1024,
      "CPUs": 2.0,
      "ProcessLimit": 100,
      "TempStorageMB": 2048
    },
    "BlockedFileExtensions": [ ".exe", ".bat", ".cmd", ".ps1", ".sh", ".scr", ".vbs" ],
    "EnableSecurityScanning": true,
    "CleanupOnCompletion": true,

    "TieredExecution": {
      "EnableTieredExecution": true,

      "RamPool": {
        "TotalCapacityGB": 16,
        "MaxConcurrentJobs": 10,
        "TmpfsBaseSizeMB": 512,
        "EnableIterativeRelaunch": true,
        "IterativeRelaunch": {
          "BaselineSizeMB": 512,
          "MultiplierFactor": 1.5,
          "MaxSizeMB": 4096,
          "MaxRetries": 3,
          "TriggerPatterns": [
            "MemoryError",
            "Killed",
            "out of memory",
            "cannot allocate memory",
            "exit code 137"
          ]
        }
      },

      "DiskPool": {
        "MaxConcurrentJobs": 5,
        "DiskVolumePath": "D:\\ExecutionVolumes",
        "EnableVolumeReuse": true,
        "VolumeCleanupDelayMinutes": 60
      },

      "JobProfiles": {
        "Light": {
          "Description": "Small, quick jobs (< 512MB RAM, < 5 min)",
          "RamCapacityCostGB": 0.5,
          "CpuCost": 0.5,
          "PreferredTier": "RAM",
          "MaxExecutionMinutes": 2880
        },
        "Standard": {
          "Description": "Normal jobs (512MB-2GB RAM, < 30 min)",
          "RamCapacityCostGB": 2,
          "CpuCost": 1.0,
          "PreferredTier": "RAM",
          "MaxExecutionMinutes": 2880
        },
        "Heavy": {
          "Description": "Large jobs (2GB-8GB RAM, < 2 hours)",
          "RamCapacityCostGB": 8,
          "CpuCost": 2.0,
          "PreferredTier": "RAM",
          "MaxExecutionMinutes": 2880
        },
        "Bulk": {
          "Description": "Long-running, disk-intensive jobs",
          "RamCapacityCostGB": 1,
          "CpuCost": 1.0,
          "PreferredTier": "Disk",
          "MaxExecutionMinutes": 2880
        }
      },

      "DefaultJobProfile": "Standard",

      "TierSelectionStrategy": {
        "EnableAutoTierSelection": true,
        "FallbackToDisk": true,
        "RamPoolFullBehavior": "Queue",
        "MaxQueueDepth": 20,
        "QueueTimeoutMinutes": 30
      }
    }
  },
  "DemoShowcase": {
    "PublicSystemUserId": "68de74e6637f928edd771315"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "TeiasMongoAPI.Services": "Debug"
    }
  },
  "AllowedHosts": "*",
  "MaintenanceMode": false
}